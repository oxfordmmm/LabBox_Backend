{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Uvicorn Directly",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "trace",
                "--reload",
            ],
            "console": "integratedTerminal"
        }
    ]
}